{
  "name": "@osrd-project/ui-core",
  "version": "0.0.1-dev",
  "license": "LGPL-3.0-or-later",
  "bugs": "https://github.com/OpenRailAssociation/osrd/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenRailAssociation/osrd.git",
    "directory": "front/ui/ui-core"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "main": "dist/index.esm.js",
  "style": "dist/theme.css",
  "files": [
    "/dist"
  ],
  "exports": {
    "./dist/theme.css": "./dist/theme.css",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.esm.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "rollup -c --failAfterWarnings",
    "watch": "rollup -c -w",
    "test": "vitest run",
    "prepublishOnly": "npm run clean && npm run build",
    "lint": "eslint src --max-warnings 0 && prettier '**/*.{css,json}' --check --ignore-path ../.prettierignore",
    "lint:fix": "eslint src --fix && prettier '**/*.{css,json}' --write --ignore-path ../.prettierignore"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.1.0"
  },
  "dependencies": {
    "@osrd-project/ui-icons": "0.0.1-dev",
    "classnames": "^2.5.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@testing-library/dom": "^10.1.0",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "jsdom": "^27.1.0",
    "tailwindcss": "^4.1.13"
  }
}
